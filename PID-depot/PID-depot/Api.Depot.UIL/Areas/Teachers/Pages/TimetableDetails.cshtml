@page
@model Api.Depot.UIL.Areas.Teachers.Pages.TimetableDetailsModel
@{
}

<form method="POST" enctype="multipart/form-data">
	<input asp-for="LessonDetail.LessonTimetableId" type="text" hidden />
	<div class="form-group">
		<label asp-for="LessonDetail.Title" class="form-label">Titre du cours</label>
		<input asp-for="LessonDetail.Title" type="text" class="form-control" style="min-width:100%;"/>
		<span asp-validation-for="LessonDetail.Title" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="LessonDetail.Details" class="form-label">Détails</label>
		<textarea asp-for="LessonDetail.Details" name="LessonDetail.Details" class="form-control" style="min-width:100%;"></textarea>
		<span asp-validation-for="LessonDetail.Details" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label class="form-label">Fichiers</label>
		<input name="postedFiles" type="file" class="form-control" style="min-width:100%;" multiple />
	</div>
	<hr />
	<button type="submit" class="btn btn-primary" style="width:150px;">Enregistrer</button>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}