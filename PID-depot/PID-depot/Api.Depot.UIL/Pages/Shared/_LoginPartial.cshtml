@inject Api.Depot.UIL.Managers.IAuthManager AuthManager;

<ul class="navbar-nav">
	@if (AuthManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-page="/" title="Manage">Hello @User.Identity?.Name!</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-page="/Account/Logout" asp-route-returnUrl="@Url.PageLink()">Se déconnecter</a>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-page="/Account/Register">S'enregistrer</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-page="/Account/Login">Se connecter</a>
		</li>
	}
</ul>
