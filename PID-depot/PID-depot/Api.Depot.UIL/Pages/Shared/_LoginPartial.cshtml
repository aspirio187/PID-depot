@inject Api.Depot.UIL.Managers.IAuthManager AuthManager;

<div class="dropdown m-1">
	<a class="dropdown-toggle text-dark" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration:none;">
		<i class="bi bi-person" style="font-size:1.5em;"></i>
	</a>

	<ul class="dropdown-menu" aria-labelledby="profileDropdown">

		@if (AuthManager.IsSignedIn(User))
		{
			<li>
				<a class="dropdown-item text-dark" asp-page="/Account/Password">Profile</a>
			</li>
			<li>
				<hr />
			</li>
			<li>
				<a class="dropdown-item text-dark" asp-page="/Account/Logout" asp-route-returnUrl="@Url.PageLink()">Se déconnecter</a>
			</li>
		}
		else
		{
			<li>
				<a class="dropdown-item text-dark" asp-page="/Account/Login" asp-page-returnUrl="@Url.PageLink()">Se connecter</a>
			</li>
			<li>
				<a class="dropdown-item text-dark" asp-page="/Account/Register" asp-page-returnUrl="@Url.PageLink()">S'inscrire</a>
			</li>
		}

	</ul>
</div>